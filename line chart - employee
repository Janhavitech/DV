import pandas as pd
import matplotlib.pyplot as plt

# Load dataset
df = pd.read_csv("employee_data.csv")

# Convert 'Joining_Date' to datetime
df['Joining_Date'] = pd.to_datetime(df['Joining_Date'])

# Group by 'Joining_Date' and calculate average salary
salary_over_time = df.groupby('Joining_Date')['Salary'].mean()

# Plot
plt.figure(figsize=(10, 6))
plt.plot(salary_over_time.index, salary_over_time.values, label='Average Salary', color='tab:blue')
plt.title('Average Salary Over Time')
plt.xlabel('Joining Date')
plt.ylabel('Average Salary')
plt.legend()
plt.grid(True)
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()
